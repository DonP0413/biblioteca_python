@startuml

table "usuario" as user {
  + id [PK]
  --
  username
  password_hash
  is_admin
  avatar_img
  security_question
  security_answer_hash
}

table "genero" as genre {
  + id [PK]
  --
  nombre
}

table "libro" as book {
  + id [PK]
  --
  titulo
  autor
  leido
  paginas_totales
  pagina_actual
  ano_publicacion
  fecha_leido
  --
  + usuario_id [FK]
  + genero_id [FK]
}

user ||--|{ book
genre ||--o{ book

@enduml